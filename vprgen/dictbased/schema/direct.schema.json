{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "name": { "type": "string" },
        "from_pin": { "type": "string" },
        "to_pin": { "type": "string" },
        "x_offset": {
            "type": "integer",
            "default": 0
        },
        "y_offset": {
            "type": "integer",
            "default": 0
        },
        "z_offset": {
            "type": "integer",
            "default": 0
        },
        "switch_name": { "type": "string" }
    },
    "required": [ "name", "from_pin", "to_pin", "switch_name" ]
}
