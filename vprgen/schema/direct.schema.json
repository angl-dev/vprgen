{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
        },
        "from_pin": {
            "type": "string",
        },
        "to_pin": {
            "type": "string",
        },
        "x_offset": {
            "type": "integer",
        },
        "y_offset": {
            "type": "integer",
        },
        "z_offset": {
            "type": "integer",
            "default": 0,
        },
        "switch_name": {
            "type": "string",
        },
    },
    "required": ["name", "from_pin", "to_pin", "x_offset", "y_offset", "switch_name"],
}
