{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 0,
        },
        "type": {
            "enum": ["CHANX", "CHANY"],
        },
        "direction": {
            "enum": ["INC_DIR", "DEC_DIR"],
        },
        "capacity": {
            "type": "integer",
            "exclusiveMinimum": 0,
            "default": 1,
        },
        "timing": {
            "type": "object",
            "properties": {
                "R": {
                    "type": "number",
                    "minimum": 0,
                    "default": 0,
                },
                "C": {
                    "type": "number",
                    "minimum": 0,
                    "default": 0,
                },
            },
            "default": {
                "R": 0,
                "C": 0,
            },
        },
        "loc": {
            "type": "object",
            "properties": {
                "xlow": {
                    "type": "integer",
                    "minimum": 0,
                },
                "xhigh": {
                    "type": "integer",
                    "minimum": 0,
                    "$comment": "The same as 'xlow' if not set",
                },
                "ylow": {
                    "type": "integer",
                    "minimum": 0,
                },
                "yhigh": {
                    "type": "integer",
                    "minimum": 0,
                    "$comment": "The same as 'ylow' if not set",
                },
                "ptc": {
                    "type": "integer",
                    "minimum": 0,
                },
            },
            "required": ["xlow", "ylow", "ptc"],
        },
        "segment_id": {
            "type": "integer",
            "minimum": 0,
        },
    },
    "required": ["id", "type", "loc", "segment_id"],
}

