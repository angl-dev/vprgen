{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 0,
        },
        "type": {
            "enum": ["IPIN", "OPIN"],
        },
        "capacity": {
            "type": "integer",
            "exclusiveMinimum": 0,
            "default": 1,
        },
        "timing": {
            "type": "object",
            "properties": {
                "R": {
                    "type": "number",
                    "minimum": 0,
                    "default": 0,
                },
                "C": {
                    "type": "number",
                    "minimum": 0,
                    "default": 0,
                },
            },
            "default": {
                "R": 0,
                "C": 0,
            },
        },
        "loc": {
            "type": "object",
            "properties": {
                "x": {
                    "type": "integer",
                    "minimum": 0,
                },
                "y": {
                    "type": "integer",
                    "minimum": 0,
                },
                "ptc": {
                    "type": "integer",
                    "minimum": 0,
                },
                "side": {
                    "enum": ["LEFT", "TOP", "RIGHT", "BOTTOM"],
                },
            },
            "required": ["x", "y", "ptc", "side"],
        },
    },
    "required": ["id", "type", "loc"],
}
